# Ethereum Network Configuration
ETHEREUM_NETWORK=sepolia
CHAIN_ID=11155111

# Ethereum RPC Configuration
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key_here
RATE_LIMIT_PER_SECOND=100

# Contract Address
ETHEREUM_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
DEPLOYMENT_BLOCK=1000000

# Deployer Configuration (Required for write operations)
ETHEREUM_WALLET_PRIVATE_KEY=your_private_key_here
ETHEREUM_DEPLOYER_ADDRESS=0xYourDeployerAddressHere

# Monitoring Configuration
ENABLE_EVENT_MONITORING=true
POLLING_INTERVAL_SECONDS=30
MAX_BLOCK_RANGE=1000
RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=30

# Notification Configuration
NOTIFY_ADDRESSES=0xAddress1,0xAddress2,0xAddress3

# Database Configuration (Optional - for caching)
DATABASE_URL=postgresql://username:password@localhost:5432/ethereum_cache

# Logging Configuration
RUST_LOG=info